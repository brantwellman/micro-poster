<li>
  <%= gravatar_for(user, size: 50) %>
  <%= link_to user.name, user_path(user), class: "index-link" %>
  <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to "Delete", user, method: :delete,
                         data: { confirm: "Are you sure you want to proced?" } %>
  <% end %>
</li>
